<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backf"
    tools:context=".ProfileFragment">

    <include
        android:id="@+id/flameNotificationBox"
        layout="@layout/notification_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <include
        android:id="@+id/gasNotificationBox"
        layout="@layout/notification_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flameNotificationBox"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <include
        android:id="@+id/movementNotificationBox"
        layout="@layout/notification_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gasNotificationBox"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</RelativeLayout>
