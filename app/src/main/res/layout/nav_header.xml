<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:gravity="bottom"
    android:padding="16dp"
    android:background="@drawable/back_header"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:background="@drawable/circle_white"
        android:elevation="2dp"
        android:padding="20dp">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="end|center_vertical"> <!-- Utilisez end ici pour aligner le contenu du LinearLayout à l'extrémité -->

        <!-- Utilisez start ici pour aligner le texte à l'extrémité gauche du TextView -->

    </LinearLayout>

    <TextView
        android:layout_width="101dp"
        android:layout_height="31dp"
        android:layout_marginStart="7dp"
    android:gravity="start|center_vertical"
    android:text="IntelliHome"
    android:textColor="@color/white"
    android:textStyle="bold" />


    <!-- Ajoutez d'autres éléments TextView ici si nécessaire -->

    </LinearLayout>
